{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": false,
    "checkJs": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}